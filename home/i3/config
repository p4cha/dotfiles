client.unfocused        #6e686f #6e686f #888888 #292d2e
client.urgent           #e9e6e6 #BFB8B0 #ffffff #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000

for_window [class='Urxvt'] floating enable

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	position top
	status_command conky | dzen2 -x '500' -e '' -fg '#CCCACA' -bg '#242424' -ta r -fn '-*-inconsolata-*-r-normal-*-12-120-*-*-*-*-iso8859-*' -y 0 -h 20 -p 
	tray_output none
	font pango: Inconsolata 10
	strip_workspace_numbers yes
    
	colors {
		statusline #606060
		background #242424
		focused_workspace #242424 #D5D5D5 #242424 
		inactive_workspace #242424 #282828 #CCCACA
		urgent_workspace   #1A1A1A #664742 #1b1b1b
        }
}